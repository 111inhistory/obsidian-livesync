{
    "compilerOptions": {
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "es6",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictFunctionTypes": true,
        "alwaysStrict": true,
        "lib": ["dom", "es5", "ES6", "ES7", "es2020"]
    },
    "include": ["./src/*.ts"],
    // "files": ["./src/main.ts"],
    "exclude": ["pouchdb-browser-webpack"]
}
